<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".Cadastro.CadastroCatequistaActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/buttonFinalizarCadastro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/subtitCadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:text="@string/informacoes_de_login"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/telefoneCatequista" />

            <TextView
                android:id="@+id/titCadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/ficha_de_cadastro"
                android:gravity="center"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/nomeCatequista"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="@dimen/campos_tela_cadastro"
                android:layout_marginStart="@dimen/campos_tela_cadastro"
                android:layout_marginTop="@dimen/campos_tela_cadastro"
                android:ems="10"
                android:hint="Nome Completo"
                android:inputType="textPersonName"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titCadastro" />

            <EditText
                android:id="@+id/enderecoCatequista"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/campos_tela_cadastro"
                android:layout_marginStart="@dimen/campos_tela_cadastro"
                android:layout_marginTop="@dimen/campos_tela_cadastro"
                android:ems="10"
                android:hint="EndereÃ§o"
                android:inputType="textPostalAddress"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nomeCatequista" />

            <EditText
                android:id="@+id/cepCatequista"
                android:layout_width="0dp"
                android:hint="CEP"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/campos_tela_cadastro"
                android:layout_marginStart="@dimen/campos_tela_cadastro"
                android:layout_marginTop="@dimen/campos_tela_cadastro"
                android:ems="10"
                android:inputType="number"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/enderecoCatequista" />

            <EditText
                android:id="@+id/telefoneCatequista"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/campos_tela_cadastro"
                android:layout_marginStart="@dimen/campos_tela_cadastro"
                android:layout_marginTop="@dimen/campos_tela_cadastro"
                android:ems="10"
                android:hint="Telefone p/ Contato"
                android:inputType="phone"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cepCatequista" />

            <EditText
                android:id="@+id/emailCatequista"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/campos_tela_cadastro"
                android:layout_marginStart="@dimen/campos_tela_cadastro"
                android:layout_marginTop="@dimen/campos_tela_cadastro"
                android:ems="10"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subtitCadastro" />

            <EditText
                android:id="@+id/senhaCatequista"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/campos_tela_cadastro"
                android:layout_marginStart="@dimen/campos_tela_cadastro"
                android:layout_marginTop="@dimen/campos_tela_cadastro"
                android:ems="10"
                android:hint="Senha"
                android:inputType="textPassword"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailCatequista" />

            <EditText
                android:id="@+id/catequistaConfirmaSenha"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/campos_tela_cadastro"
                android:layout_marginStart="@dimen/campos_tela_cadastro"
                android:layout_marginTop="@dimen/campos_tela_cadastro"
                android:ems="10"
                android:hint="Confirmar Senha"
                android:inputType="textPassword"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/senhaCatequista" />

            <Button
                android:id="@+id/buttonFinalizarCadastro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/campos_tela_cadastro"
                android:layout_marginStart="@dimen/campos_tela_cadastro"
                android:layout_marginTop="@dimen/campos_tela_cadastro"
                android:background="@color/colorPrimary"
                android:text="Finalizar Cadastro"
                android:textColor="@color/colorAccent"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/catequistaConfirmaSenha" />


        </android.support.constraint.ConstraintLayout>

    </ScrollView>



